generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Finance {
  id     String   @id @default(uuid()) @map("_id")
  Users  User[]
  Debit  Debit[]
  Credit Credit[]
  created_At DateTime @default(now())
  updated_At DateTime @updatedAt
}

model Credit {
  id         String   @id @default(uuid()) @map("_id")
  created_At DateTime @default(now())
  updated_At DateTime @updatedAt
  Finance    Finance? @relation(fields: [financeId], references: [id])
  financeId  String?
}

model Debit {
  id         String   @id @default(uuid()) @map("_id")
  created_At DateTime @default(now())
  updated_At DateTime @updatedAt
  Finance    Finance? @relation(fields: [financeId], references: [id])
  financeId  String?
}

model User {
  id String @id @default(uuid()) @map("_id")
  Finance   Finance? @relation(fields: [financeId], references: [id])
  financeId String?
  created_At DateTime @default(now())
  updated_At DateTime @updatedAt
}
